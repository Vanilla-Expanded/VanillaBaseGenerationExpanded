<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <KCSG.SettlementLayoutDef Abstract="True" Name="VBGE_BaseTribal">
    <settlementSize>72,72</settlementSize>
    <avoidBridgeable>true</avoidBridgeable>
    <avoidMountains>true</avoidMountains>
    <centerBuildings>
      <centerSize>52,52</centerSize>
      <spaceAround>1</spaceAround>
      <allowedStructures>
        <li>
          <count>0~1</count>
          <tag>TribalHospital</tag>
        </li>
        <li>
          <count>2~10</count>
          <tag>TribalBarrack</tag>
        </li>
        <li>
          <count>1~1</count>
          <tag>TribalKitchen</tag>
        </li>
        <li>
          <count>0~1</count>
          <tag>TribalPrison</tag>
        </li>
        <li>
          <count>0~1</count>
          <tag>TribalGraveyard</tag>
        </li>
        <li>
          <count>0~1</count>
          <tag>TribalRecreation</tag>
        </li>
        <li>
          <count>1~3</count>
          <tag>TribalStockpile</tag>
        </li>
      </allowedStructures>
    </centerBuildings>
    <peripheralBuildings>
      <allowedStructures>
        <li>
          <count>0~2</count>
          <tag>TribalFarm</tag>
        </li>
        <li>
          <count>2~20</count>
          <tag>GenericField</tag>
        </li>
      </allowedStructures>
    </peripheralBuildings>
    <roadOptions>
      <addLinkRoad>true</addLinkRoad>
      <linkRoadDef>PackedDirt</linkRoadDef>
    </roadOptions>
    <propsOptions>
      <scatterProps>true</scatterProps>
      <scatterMinDistance>8</scatterMinDistance>
      <scatterMaxAmount>100</scatterMaxAmount>
      <scatterPropsDefs>
        <li MayRequire="VanillaExpanded.VFEPropsandDecor">VFEPD_BoxLarge</li>
        <li MayRequire="VanillaExpanded.VFEPropsandDecor">VFEPD_BoxSmall</li>
        <li MayRequire="VanillaExpanded.VFEPropsandDecor">VFEPD_BrickPile</li>
        <li MayRequire="VanillaExpanded.VFEPropsandDecor">VFEPD_Planks</li>
        <li MayRequire="VanillaExpanded.VFEPropsandDecor">VFEPD_WoodenLogs</li>
        <li MayRequire="VanillaExpanded.VFEPropsandDecor">VFEPD_WoodenLogsLarge</li>
        <li MayRequire="VanillaExpanded.VFEPropsandDecor">VFEPD_WoodenWagon</li>
      </scatterPropsDefs>
    </propsOptions>
    <stockpileOptions>
      <stockpileValueMultiplier>2.0</stockpileValueMultiplier>
    </stockpileOptions>
  </KCSG.SettlementLayoutDef>
  <KCSG.SettlementLayoutDef ParentName="VBGE_BaseTribal">
    <defName>VBGE_TribalProduction</defName>
    <centerBuildings>
      <centralBuildingTags>
        <li>VGBE_TribalProduction</li>
        <li>VGBE_TribalCenter</li>
      </centralBuildingTags>
      <allowedStructures>
        <li>
          <tag>VGBE_TribalProduction</tag>
          <count>2~3</count>
        </li>
        <li>
          <count>1~3</count>
          <tag>TribalProduction</tag>
        </li>
      </allowedStructures>
    </centerBuildings>
    <stockpileOptions>
      <fillStorageBuildings>true</fillStorageBuildings>
      <fillWithDefs>
        <li>MedicineHerbal</li>
        <li>Steel</li>
        <li>Chocolate</li>
        <li>ThrumboHorn</li>
        <li>ElephantTusk</li>
      </fillWithDefs>
    </stockpileOptions>
  </KCSG.SettlementLayoutDef>
  <KCSG.SettlementLayoutDef ParentName="VBGE_BaseTribal">
    <defName>VBGE_TribalMining</defName>
    <centerBuildings>
      <centralBuildingTags>
        <li>VGBE_TribalMining</li>
        <li>VGBE_TribalCenter</li>
      </centralBuildingTags>
      <allowedStructures>
        <li>
          <tag>VGBE_TribalMining</tag>
          <count>1~3</count>
        </li>
      </allowedStructures>
    </centerBuildings>
    <stockpileOptions>
      <fillStorageBuildings>true</fillStorageBuildings>
      <fillWithDefs>
        <li>Steel</li>
        <li>Gold</li>
        <li>Plasteel</li>
        <li>Silver</li>
        <li>Jade</li>
      </fillWithDefs>
    </stockpileOptions>
  </KCSG.SettlementLayoutDef>
  <KCSG.SettlementLayoutDef ParentName="VBGE_BaseTribal">
    <defName>VBGE_TribalSlavery</defName>
    <centerBuildings>
      <allowedStructures>
        <li>
          <count>3~5</count>
          <tag>TribalPrison</tag>
        </li>
      </allowedStructures>
    </centerBuildings>
    <stockpileOptions>
      <fillStorageBuildings>true</fillStorageBuildings>
      <fillWithDefs>
        <li>Apparel_TribalA</li>
        <li>Apparel_Parka</li>
        <li>ThrumboHorn</li>
        <li>ElephantTusk</li>
      </fillWithDefs>
    </stockpileOptions>
  </KCSG.SettlementLayoutDef>
  <KCSG.SettlementLayoutDef ParentName="VBGE_BaseTribal">
    <defName>VBGE_TribalLogging</defName>
    <centerBuildings>
      <centralBuildingTags>
        <li>VGBE_TribalLogging</li>
        <li>VGBE_TribalCenter</li>
      </centralBuildingTags>
      <allowedStructures>
        <li>
          <tag>VGBE_TribalLogging</tag>
          <count>2~3</count>
        </li>
      </allowedStructures>
    </centerBuildings>
    <stockpileOptions>
      <fillStorageBuildings>true</fillStorageBuildings>
      <fillWithDefs>
        <li>WoodLog</li>
        <li>ThrumboHorn</li>
        <li>ElephantTusk</li>
      </fillWithDefs>
    </stockpileOptions>
  </KCSG.SettlementLayoutDef>
  <KCSG.SettlementLayoutDef ParentName="VBGE_BaseTribal">
    <defName>VBGE_TribalDefence</defName>
    <centerBuildings Inherit="False">
      <centerSize>52,52</centerSize>
      <spaceAround>1</spaceAround>
      <allowedStructures>
        <li>
          <count>1~1</count>
          <tag>TribalHospital</tag>
        </li>
        <li>
          <count>2~10</count>
          <tag>TribalBarrack</tag>
        </li>
        <li>
          <count>1~1</count>
          <tag>TribalKitchen</tag>
        </li>
        <li>
          <count>1~1</count>
          <tag>TribalGraveyard</tag>
        </li>
        <li>
          <count>1~3</count>
          <tag>TribalStockpile</tag>
        </li>
        <li>
          <count>0~2</count>
          <tag>VGBE_TribalDefence</tag>
        </li>
      </allowedStructures>
      <centralBuildingTags>
        <li>VGBE_TribalDefence</li>
        <li>VGBE_TribalCenter</li>
      </centralBuildingTags>
    </centerBuildings>
    <defenseOptions>
      <pawnGroupMultiplier>1.8</pawnGroupMultiplier>
    </defenseOptions>
    <stockpileOptions>
      <fillStorageBuildings>true</fillStorageBuildings>
      <fillWithDefs>
        <li>MeleeWeapon_Club</li>
        <li>MeleeWeapon_Knife</li>
        <li>MeleeWeapon_Ikwa</li>
        <li>MeleeWeapon_Spear</li>
        <li>Bow_Short</li>
        <li>Pila</li>
        <li>Bow_Recurve</li>
        <li>Bow_Great</li>
        <li>Chocolate</li>
        <li>ThrumboHorn</li>
        <li>ElephantTusk</li>
      </fillWithDefs>
    </stockpileOptions>
  </KCSG.SettlementLayoutDef>
</Defs>